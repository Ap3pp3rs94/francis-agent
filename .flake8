[flake8]
# Match Black's style
max-line-length = 88
extend-ignore = E203, E266, E501, W503, W605

# Skip generated/legacy stuff; loosen rules for legacy file(s)
exclude = .venv, venv, env, build, dist, logs, backups, restore, data, __pycache__

# Per-file relaxations for legacy code; remove over time
per-file-ignores =
    francis.backup.py: F401,F841,E701,E702,E703,W605
    tools/*.py: E701,E702
per-file-ignores =
    francis.backup.py: F401,F841,E701,E702,E703,W605
    tools/*.py: E701,E702
    backfill_mem_index.py: E401
    long_memory.py: E401
    francis.py: F401
    tools/kvstore.py: F401
